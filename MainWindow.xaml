<Window x:Class="L_R_2_Khasanova_BPI_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L_R_2_Khasanova_BPI_23_01"
        mc:Ignorable="d"
        Title="Maтематическое выражение" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <StackPanel>
        
        <RadioButton IsChecked="True" Margin="5" Name="Radio1">
            <StackPanel>
                <TextBlock Text="sin(f·a), f ∈ {4,5,6,7,8,9}" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <WrapPanel>
                    <GroupBox Header="Parametrs">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Text="0,00" Grid.Column="1" Grid.Row="0"
       MinWidth="70" Name="R1TextA"/>
                            <Label Content="f" Grid.Column="0" Grid.Row="1"/>
                            <ComboBox Grid.Column="1" Grid.Row="1" SelectedIndex="0"
        Name="R1ComboF">

                                <ComboBoxItem>4</ComboBoxItem>
                                <ComboBoxItem>5</ComboBoxItem>
                                <ComboBoxItem>6</ComboBoxItem>
                                <ComboBoxItem>7</ComboBoxItem>
                                <ComboBoxItem>8</ComboBoxItem>
                                <ComboBoxItem>9</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </WrapPanel>
                
            </StackPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio2">
            <StackPanel>
                <TextBlock Text="cos(f·a) + sin(f·b), f ∈ {10,20,30,40}" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel>
                    <GroupBox>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                            <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R2TextA"/>
                            <Label Content="b" Grid.Column="2" Grid.Row="0"/>
                            <TextBox Text="0,00" Grid.Column="3" Grid.Row="0" MinWidth="70" Name="R2TextB"/>
                            <Label Content="f" Grid.Column="0" Grid.Row="1"/>
                            <ComboBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" SelectedIndex="0" Name="R2ComboF"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
                
            </StackPanel>
        </RadioButton>

        <RadioButton Margin="5" x:Name="Radio3">
            <StackPanel>
                <TextBlock Text="c·a² + d·b², c ∈ {0,1}, d ∈ {-1,0,1}" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel>
                    <GroupBox>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="a"/>
                            <TextBox Text="0,00" MinWidth="50" Name="R3TextA"/>
                            <Label Content="b"/>
                            <TextBox Text="0,00" MinWidth="50" Name="R3TextB"/>
                            <Label Content="c"/>
                            <ComboBox MinWidth="50" SelectedIndex="0" Name="R3ComboC"/>
                            <Label Content="d"/>
                            <ComboBox MinWidth="70" SelectedIndex="0" Name="R3ComboD"/>

                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </StackPanel>
            
        </RadioButton>

        <RadioButton Margin="5" Name="Radio4">
            <StackPanel>
                <TextBlock Text="Z = Σ (c·a^i)/(i+1), i=0..d" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <WrapPanel>
                    <Label Content="c" VerticalAlignment="Center"/>
                    <ComboBox MinWidth="70" SelectedIndex="0" Name="R4ComboC"/>
                    <Label Content="d" VerticalAlignment="Center"/>
                    <TextBox Text="3" Width="50" Name="R4TextD"/>
                    <Label Content="a" VerticalAlignment="Center"/>
                    <TextBox Text="2,00" Width="70" Name="R4TextA"/>
                </WrapPanel>
            </StackPanel>
        </RadioButton>

        <RadioButton Margin="5" x:Name="Radio5">
            <StackPanel>
                <TextBlock Text="Вариант 16: Z = ΣΣ [a^(i-1)*x^i + f^j*y^j] / [(i+1)*j]" 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <WrapPanel>
                    <Label Content="N =" VerticalAlignment="Center"/>
                    <TextBox MinWidth="50" Name="R5TextN"/>

                    <Label Content="K" VerticalAlignment="Center"/>
                    <TextBox MinWidth="50" Name="R5TextK"/>
                    
                    <Label Content="a" VerticalAlignment="Center"/>
                    <TextBox MinWidth="50" Name="R5TextA"/>
                    
                    <Label Content="x" VerticalAlignment="Center"/>
                    <TextBox  MinWidth="50" Name="R5TextX"/>
                    
                    <Label Content="f" VerticalAlignment="Center"/>
                    <TextBox  MinWidth="50" Name="R5TextF"/>
                    
                    <Label Content="y" VerticalAlignment="Center"/>
                    <TextBox  MinWidth="50" Name="R5TextY"/>
                </WrapPanel>
            </StackPanel>
        </RadioButton>

        <Button Content="Считать" Width="100" Click="Calc_Click"/>
    </StackPanel>

   
    
</Window>
